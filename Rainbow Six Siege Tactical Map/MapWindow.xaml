<Window x:Class="R6.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R6"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="none"
        Title="MapWindow" Height="1080" Width="1920">
    <Grid Width="Auto" Height="Auto">
        <Grid.Background>
            <ImageBrush ImageSource="background-image.jpg"/>
        </Grid.Background>
        <Image Source="BorderButton.jpg" MouseLeftButtonDown="Image_MouseLeftButtonDown"  HorizontalAlignment="Center" Height="178" VerticalAlignment="Center" Width="290"/>
        <Button Content="X" HorizontalAlignment="Left" Height="100" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" Click="Button_Click"/>
    </Grid>
</Window>